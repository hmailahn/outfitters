<h1 class="text-primary text-center">WELCOME TO OUTFITTERS</h1>
<h2 class="text-primary text-center">Log In!</h2>
<form class="login-form row">
    <div class="mb-3 col-4">
        <label for="username-login" class="form-label">Username</label>

        <input type="text" id="username-login" />
    </div>
    <div  class="mb-3 col-4">
        <label for="email-login" class="form-label">Email</label>
        <input type="email" id="email-login"/>
    </div>
    <div class="mb-3 col-4">
        <label for="password-login" class="form-label">Password</label>
        <input type="password" id="password-login" />
    </div>
    <div class="text-center">
    <button class="btn btn-primary" type="submit">Sign in<ion-icon name="enter-outline"></ion-icon></button>
    </div>
</form>

<h2 class="text-primary text-center">Sign Up!</h2>
<form class="signup-form row">
    <div class="mb-3 col-4">
        <label for="username-signup">Username:</label>
        <input type="text" id="username-signup" />
    </div>
    <div class="mb-3 col-4">
        <label for="email-signup">Email:</label>
        <input type="email" id="email-signup"/>
    </div>
    <div class="mb-3 col-4">
        <label for="password-signup">Password</label>
        <input type="password" id="password-signup"/>
    </div>
    <div class="text-center">
    <button class="btn btn-primary" type="submit">Signup <ion-icon name="person-add-outline"></ion-icon></button>
    </div>
</form>
<script src="js/login.js"></script>
<script src="js/logout.js"></script>